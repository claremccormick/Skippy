class Main

  def initialize
    @x_value = 0
    @y_value = 0
    @dimension
    @location = "(#{@x_value}, #{@y_value})"
    Kangaroo.at_home? = false
  end

  print('Please enter the dimension of the grid (>= 1): ')
  @dimension = gets.chomp
  if @dimension < 1
    print('The dimension must be greater than or equal to 1')
  end

while Kangaroo.at_home? != true
  Grid.print_grid
  Die.direction

end
end
